package oop1;

class Snoep
{
    public int[] snoep;

    public Snoep()
    {
	this.snoep = generateSnoep();
    }

    private int[] generateSnoep()
    {
	int[] snoepen =
	{ 1, 2, 3, 4, 5 };
	int[] snoep = new int[snoepen.length];
	for (int i = 0; i < snoep.length; i++)
	{
	    snoep[i] = snoepen[(int) (Math.random() * snoepen.length)];
	}
	return snoep;
    }

    public int[] getSnoep()
    {
	return snoep;
    }

    public void setSnoep(int[] snoep)
    {
	this.snoep = snoep;
    }
}
