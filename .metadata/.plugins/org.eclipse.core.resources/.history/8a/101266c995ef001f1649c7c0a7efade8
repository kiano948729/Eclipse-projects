package oop1;

import java.util.Scanner;

public class SnoepAutomaat
{
    public static void main(String[] args)
    {
	// TODO Auto-generated method stub
	Scanner console = new Scanner(System.in);
	while (true)
	{
	    System.out.println("welkom bij het snoepautomaat");
	    System.out.println("1. wil je een wilekeurig snoepje?");
	    System.out.println("2. wil je een snoepje kiezen");
	    String keuze = console.nextLine();
	    switch (keuze)
	    {
	    case "1":
		Snoep snoepautomaat = new Snoep();
		System.out.println("Je krijgt het snoepje: " + String.join(" ", snoepautomaat.getSnoep()));
		break;
	    case"2":
		System.out.println("");
		break;
	    }
	}
    }
}
