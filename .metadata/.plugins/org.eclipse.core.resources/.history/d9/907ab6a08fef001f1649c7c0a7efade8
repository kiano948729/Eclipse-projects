package oop1;
import java.util.Random;


class Snoep
{
    public String[] snoep;

    public Snoep()
    {
	this.snoep = generateSnoep();
    }

    private int[] generateSnoep()
    {
	String[] snoepen ={"aarbei", "choco", "madness"};
        Random rand = new Random();
        String[] gekozenSnoep = new String[1]; // EÃ©n snoepje kiezen

        gekozenSnoep[0] = snoepen[rand.nextInt(snoepen.length)];
        return gekozenSnoep;
    }

    public String[] getSnoep()
    {
	return snoep;
    }

    public void setSnoep(String[] snoep)
    {
	this.snoep = snoep;
    }
}
